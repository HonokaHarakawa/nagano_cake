<h2>ショッピングカート</h2>
<%= link_to "カートを空にする" %>

<table class="table"> 
  <thead>
    <tr>
      <th>商品名</th><th>単価（税込）</th><th>数量</th><th>小計</th><th colapse></th>
    </tr>
  </thead>
  <tbody>
    <% @customer.cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill,60,40 %><%= cart_item.item.name %></td><td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td><td><%= cart_item.subtotal%></td>
      <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
