<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>配送先編集</h2>
    </div>
  </div>
  
      <%= form_with model: @address, url: address_path(@address) do |f| %>
  <div class="row mb-3">
    <div class="col-md-3">
        <%= f.label :郵便番号 %>
    </div>
    <div class="col-md-3">
        <%= f.text_field :postal_code %>
    </div>
  </div>
  
  <div class="row mb-3">   
    <div class="col-md-3">
        <%= f.label :住所 %>
    </div>    
    <div class="col-md-3">
        <%= f.text_field :address %>
    </div>
  </div>
  
  <div class="row mb-3"> 
    <div class="col-md-3">
        <%= f.label :宛名 %>
    </div>    
    <div class="col-md-3">
        <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="row text-right">
    <div class="col-md-9">     
        <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div> 
  </div>
      <% end %>
</div>