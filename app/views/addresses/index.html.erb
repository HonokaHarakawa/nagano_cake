<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>配送先登録/一覧</h2>
    </div>
  </div> 
  
      <%= form_with model: @address, url: addresses_path do |f| %>
        <%= f.label :郵便番号（ハイフンなし）%>
        <%= f.text_field :postal_code %><br>
        
        <%= f.label :住所 %>
        <%= f.text_field :address %><br>
        
        <%= f.label :宛名 %>
        <%= f.text_field :name %><br>
        
        <%= f.submit "新規登録", class:"btn btn-success" %>
        
      <% end %>
  <div class="row justify-content-left">
    <div class="col col-lg-8 mt-5">
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th>郵便番号</th><th>住所</th><th>宛名</th><th colspan></th>
          </tr>
        </thead>
        <tbody> 
          <% @customer.addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>      