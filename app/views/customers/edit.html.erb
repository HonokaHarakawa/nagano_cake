<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>会員情報編集</h2>
    </div>
  </div>  

      <%= form_with model: @customer, url: customers_page_edit_path(@customer), local:true do |f| %>
      <div class="row mb-3">
        <div class="col-md-2">
          <%= f.label :氏名 %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :last_name %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-2">    
          <%=f.label :フリガナ %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name_kana %>
        </div>  
        <div class="col-md-3">
          <%= f.text_field :last_name_kana %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-2">  
          <%= f.label :郵便番号 %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :postal_code %>
        </div>  
      </div>
      
      <div class="row mb-3">
        <div class="col-md-2">
          <%= f.label :住所 %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :address %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-2">
          <%= f.label :電話番号 %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :telephone_number %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-2">    
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :email %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-5 offset-md-2">      
          <%= f.submit "編集内容を保存", class:"btn btn-success mt-3" %>
        </div>
        <div class="col-md-5">
          <%= link_to "退会する", customers_page_confirm_path, class:"btn btn-danger mt-3" %>
        </div>
      </div>
      <% end %>
</div>      