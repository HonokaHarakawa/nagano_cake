<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>マイページ</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      <h4>登録情報</h4>
    </div>
    <div class="col-md-4">
      <%= link_to "編集する", customers_page_edit_path(@customer), class:"btn btn-success" %>
    </div>
  </div>
  <div class="row justify-content-left"> 
    <div class="col col-lg-6">   
      <table class="table table-bordered border-dark mt-3">
        <tr>
          <td class="table-secondary">氏名</td><td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <td class="table-secondary">カナ</td><td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td class="table-secondary">郵便番号</td><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-secondary">住所</td><td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-secondary">電話番号</td><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-secondary">メールアドレス</td><td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">  
    <div class="col-md-4">
      <h4>配送先</h4>
    </div>
    <div class="col-md-4">
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
    </div>
  </div>  
  <div class="row mt-3">
    <div class="col-md-4">
      <h4>注文履歴</h4>
    </div>
    <div class="col-md-4"> 
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </div>
  </div>    
</div>      