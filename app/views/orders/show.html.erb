<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>注文履歴詳細</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <p>注文情報</p>
      <table class="table table-bordered border-dark">
        <tr>
          <td class="table-secondary">注文日</td><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="table-secondary">配送先</td>
          <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <td class="table-secondary">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td class="table-secondary">ステータス</td><td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-6">
      <p>請求情報</p>
      <table class="table table-bordered border-dark">
        <tr>
          <td class="table-secondary">商品合計</td><td><%= @total %></td>
        </tr>
        <tr>
          <td class="table-secondary">配送料</td><td><%= @order.postage %></td>
        </tr>
        <tr>
          <td class="table-secondary">ご請求額</td><td><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <p>注文内容</p>
      <table class="table table-bordered border-dark">
          <tr class="table-secondary">
            <td>商品</td><td>単価（税込）</td><td>個数</td><td>小計</td>
          </tr>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
          </tr>  
          <% end %>
        </tbody>
      </table>
    </div>
  </div>   
</div>
