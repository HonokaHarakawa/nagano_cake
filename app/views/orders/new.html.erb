<h2>注文情報入力</h2>
<%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
<h4>支払方法</h4>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
  
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h4>お届け先</h4>
  <%= f.radio_button :select_address, "0" %>
  <%= f.label :address_id, "ご自身の住所" %><br>
    〒<%= @postal_code %><%= @address %><br>
    　<%= @name %><br>
  
  <%= f.radio_button :select_address, "1" %>
  <%= f.label :address_id, "登録済み住所から選択" %><br>
  <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %><br>

  <%= f.radio_button :select_address, "2" %>
  <%= f.label :address_id, "新しいお届け先" %><br>
  <%= f.label :郵便番号（ハイフンなし） %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :住所 %>
  <%= f.text_field :address %><br>
  <%= f.label :宛名 %>
  <%= f.text_field :name %><br>
<%= f.submit "確認画面に進む", class:"btn btn-primary" %>
<% end %>