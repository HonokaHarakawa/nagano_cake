<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>注文情報入力</h2>
    </div>
  </div>
      
      <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
      <h4>支払方法</h4>
  <div class="row">
    <div class="col-md-4 offset-md-1">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
  </div> 
  <div class="row">
    <div class="col-md-4 offset-md-1">
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>
  </div> 
  
      <h4>お届け先</h4>
  <div class="row">
    <div class="col-md-4 offset-md-1">    
        <%= f.radio_button :select_address, "0" %>ご自身の住所
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-2 mb-3">
          〒<%= @postal_code %><%= @address %>
          　<%= @name %>
    </div>
  </div>    
  <div class="row">
    <div class="col-md-4 offset-md-1">
        <%= f.radio_button :select_address, "1" %>登録住所を選択
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-2 mb-3">
        <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4 offset-md-1">
        <%= f.radio_button :select_address, "2" %>
        <%= f.label :address_id, "新しいお届け先" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-2">
        <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-md-4">
        <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-2">
        <%= f.label :住所 %>
    </div>
    <div class="col-md-4">
        <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-2">
        <%= f.label :宛名 %>
    </div>
    <div class="col-md-4">
        <%= f.text_field :name %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-auto mt-3">
      <%= f.submit "確認画面に進む", class:"btn btn-primary" %>
    </div>
  </div>
      <% end %>
</div>