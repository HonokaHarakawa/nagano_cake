<div class="container">
  <div class="row mt-5">
    <div class="col col-md-2 border border-dark">
      <p class="border-bottom border-dark text-center">ジャンル検索</p>
        <% @genres.each do |genre| %>
          <%= genre.name %><br>
        <% end %>
    </div>
    <div class="col-md-10">
      <h2>商品一覧</h2><p>(全<%= @item_all.count %>件)</p>
      <div class="row">
        
        <% @items.each do |item| %>
        <div class="col-md-3">
          <div class="card" style="width: 13rem;">
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image, :fill, 205, 140 %>
                <div class="card-body">
                  <h6 class="card-title text-dark"><%= item.name %></h6>
                  <p class="card-price text-dark">¥<%= item.price %></p>
              <% end %>
                </div>
          </div>
        </div>
        <% end %> 
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-auto mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>

