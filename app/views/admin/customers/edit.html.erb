<h2><%= @customer.first_name,last_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
  <%= f.label :氏名 %>
  <%= f.text_field :first_name %><%= f.text_field :last_name %>
  
  <%= f.label :フリガナ %>
  <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
  
  <%= f.label :郵便番号 %>
  <%= f.text_field :postal_code %>
  
  <%= f.label :住所 %>
  <%= f.text_field :address %>
  
  <%= f.label :電話番号 %>
  <%= f.text_field :telephone_number %>
  
  <%= f.label :メールアドレス %>
  <%= f.text_field :email %>
  
  <%= f.label :会員ステータス %>
  <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, "有効",checked: true %>
  <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :false %>
  
<% end %>