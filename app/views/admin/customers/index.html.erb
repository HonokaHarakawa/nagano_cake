<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>会員一覧</h2>
    </div>
  </div>
  
  <div class="row justify-content-md-center"> 
    <div class="col col-lg-8">
      <table class="table">
        <thead>
          <tr>
            <th class="table-secondary">会員ID</th>
            <th class="table-secondary">氏名</th>
            <th class="table-secondary">メールアドレス</th>
            <th class="table-secondary">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.first_name %><%= customer.last_name %>
              <% end %>  
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_active == true %>
            <td><p class="text-success">有効</p></td>
            <% else %>
            <td><p class="text-secondary">退会</p></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>  
  <div class="row justify-content-md-center">
    <div class="col-lg-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>      