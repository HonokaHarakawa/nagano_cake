<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  
  <div class="row justify-content-md-center"> 
    <div class="col col-lg-8">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th><th>購入者</th><th>注文個数</th><th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <p class="text-dark"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
              <% end %>
            </td>
              <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
              <td>
                  <%= order.order_details.inject(0) { |sum, order_detail| sum + order_detail.amount } %>
              </td>
              <td><%= order.status_i18n %></td>
          </tr>
          
          <% end %>
        </tbody>
      </table>
    </div>
  </div>  

</div>      