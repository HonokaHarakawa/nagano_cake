<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <%= f.label :商品画像 %>
　<%= f.attachment_field :image %>
　
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
  
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction %>
  
  <%= f.label :ジャンル %>
  <%= collection_select(:genre_id, :name, @genres, :id, :name) %>
  
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>円
  
  <%= f.label :販売ステータス %>
  <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, "販売中",checked: true %>
  <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :false %>

  <%= f.submit "変更を保存" %>
  
<% end %>