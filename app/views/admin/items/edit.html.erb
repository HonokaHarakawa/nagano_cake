<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>商品編集</h2>
    </div>
  </div>  
      <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-2">
        <%= f.label :商品画像 %>
    </div>
    <div class="col-md-4">
      　<%= f.attachment_field :image %>
    </div>
  </div>
  
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-2">    　
        <%= f.label :商品名 %>
    </div>
    <div class="col-md-4">
        <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-2">      
        <%= f.label :商品説明 %>
    </div>
    <div class="col-md-4">
        <%= f.text_area :introduction %>
    </div>
  </div>
  
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-2">      
        <%= f.label :ジャンル %>
    </div>
    <div class="col-md-4">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
  </div>
  
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-2">      
        <%= f.label :税抜価格 %>
    </div>
    <div class="col-md-4">
        <%= f.text_field :price %>円
    </div>
  </div>
  
  <div class="row justify-content-md-center mb-3">
    <div class="col-md-2">      
        <%= f.label :販売ステータス %>
    </div>
    <div class="col-md-4">
        <%= f.radio_button :is_active, "販売中",checked: true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-auto offset-md-5">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      
    </div>
  </div>  
      <% end %>
</div>      