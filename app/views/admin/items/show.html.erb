<h2>商品詳細</h2>

<%= attachment_image_tag @item, :image, :fill,200,200 %>
<table>
  <tr>
    <td>商品名</td><td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td><td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td><td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>税込価格<br>(税抜価格)</td><td><%= @item.add_tax_price.to_s(:dalimited) %>(<%= @item.price %>)</td>
  </tr>
  <tr>
    <td>販売ステータス</td><td><%= @item.is_active %></td>
  </tr>
</table>
  <%= link_to "編集する",  edit_admin_item_path(@item) %>
