<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>商品詳細</h2>
    </div>  
  </div>
  
  <div class="row justify-content-center">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, :fill,300,200 %>
    </div>
    
    <div class="col-4">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td><td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td><td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td><td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td><td><%= @item.with_tax_price.to_s(:dalimited) %>(<%= @item.price %>)</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <% if @item.is_active == true %> 
           <td><p class="text-success">販売中</p></td>
          <% else %>
           <td><p class="text-secondary">販売停止中</p></td>
          <% end %> 
          
        </tr>
      </table>
    </div>  
  </div>    
  <div class="row justify-content-md-center">
    <div class="col-lg-auto">
        <%= link_to "編集する",  edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>  
        
</div>
