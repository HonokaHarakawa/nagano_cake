<div class="container">
  <div class="row">
    <div class="col-lg-auto mt-4 mb-4 bg-light">
      <h2>商品一覧</h2>
    </div> 
    <div class="text-right">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-light btn-lg rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>
  </div> 

  <div class="row justify-content-md-center"> 
    <div class="col col-lg-10">
      <table class="table">
        <thead>
          <tr>
            <th class="table-secondary">商品ID</th>
            <th class="table-secondary">商品名</th>
            <th class="table-secondary">税抜価格</th>
            <th class="table-secondary">ジャンル</th>
            <th class="table-secondary">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
           <td><%= item.id %></td>
           <td>
             <%= link_to admin_item_path(item) do %>
               <p class="text-dark"><%= item.name %></p>
             <% end %>   
            </td>
           <td><%= item.price %></td>
           <td><%= item.genre.name %></td>
          <% if item.is_active == true %> 
           <td><p class="text-success">販売中</p></td>
          <% else %>
           <td><p class="text-secondary">販売停止中</p></td>
          <% end %> 
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
  <div class="row justify-content-md-center">
    <div class="col-lg-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>  
