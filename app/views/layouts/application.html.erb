<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <div class="navbar-brand pt-2 pb-2 pl-3 pr-3">
          <a class="navbar-brand" href="#">Logo</a>
        </div>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_items_path do %>
                  <button class="btn btn-outline-secondary">商品一覧</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_customers_path do %>
                  <button class="btn btn-outline-secondary">会員一覧</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_root_path do %>
                  <button class="btn btn-outline-secondary">注文履歴一覧</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_genres_path do %>
                  <button class="btn btn-outline-secondary">ジャンル一覧</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <button class="btn btn-outline-secondary">ログアウト</button>
                <% end %>
              </li>
            <% else%>
              <li class="nav-item">
                <%= link_to about_path do %>
                  <button class="btn btn-outline-secondary">About</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to  do %>
                  <button class="btn btn-outline-secondary">商品一覧</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_registration_path do %>
                  <button class="btn btn-outline-secondary">新規登録</button>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_session_path do %>
                  <button class="btn btn-outline-secondary">ログイン</button>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
